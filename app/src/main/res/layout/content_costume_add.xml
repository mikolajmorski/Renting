<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.costume.CostumeAddActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:id="@+id/textId"
                android:layout_row="0"
                android:layout_column="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextCostumeLabel"
                android:layout_row="0"
                android:layout_column="1"
                android:editable="false"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa"
                android:id="@+id/textName"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextCostumeName"
                android:layout_row="1"
                android:layout_column="1" />

        </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skanuj KOD"
            android:id="@+id/btnScannId"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onClickAddCostumeView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SKANUJ NFC"
            android:id="@+id/btnAddCostumeScannNFC"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onClickAddCostumeView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj Kostium"
            android:id="@+id/btnAddCostume"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClickAddCostumeView" />

    </GridLayout>
</RelativeLayout>
