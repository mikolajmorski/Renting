<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wypożycz"
            android:id="@+id/btnRent"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Zwróć"
            android:id="@+id/btnReturn"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj Kostium"
            android:id="@+id/btnAddCostume"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj Klienta"
            android:id="@+id/btnAddClient"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lista Kostiumów"
            android:id="@+id/btnCostumeList"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lista Klientów"
            android:id="@+id/btnClientList"
            android:layout_row="5"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lista Wypożyczeń"
            android:id="@+id/btnRentList"
            android:layout_row="6"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Eksport Import"
            android:id="@+id/btnExportImport"
            android:layout_row="7"
            android:layout_column="0"
            android:onClick="onClickButtonMainMenu" />
    </GridLayout>
</RelativeLayout>
