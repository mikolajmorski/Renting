<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.client.ClientEditActivity"
    tools:showIn="@layout/activity_client_edit">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextEditPersonName"
        android:layout_row="0"
        android:layout_column="0"
        android:hint="Imię" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/editTextEditPersonLastname"
        android:hint="Nazwisko" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEditStreet"
        android:layout_row="2"
        android:layout_column="0"
        android:hint="Ulica" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextEditHouseNumber"
        android:layout_row="3"
        android:layout_column="0"
        android:hint="Nr domu i mieszkania" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextEditPostalCode"
        android:layout_row="4"
        android:layout_column="0"
        android:hint="Kod"
        android:inputType="numberSigned" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEditCity"
        android:layout_row="5"
        android:layout_column="0"
        android:hint="Miasto" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextEditPhoneNumber"
        android:layout_row="6"
        android:layout_column="0"
        android:hint="Tel"
        android:inputType="phone" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEditMail"
        android:layout_row="7"
        android:layout_column="0"
        android:hint="Mail" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Zmień Dane"
        android:id="@+id/btnEditClient"
        android:layout_row="8"
        android:layout_column="0"
        android:onClick="onClickButtonEditClient" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Usuń Tego Klienta"
        android:id="@+id/btnEditRemoveClient"
        android:layout_row="9"
        android:layout_column="0" />

</GridLayout>
